<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:background="#fcfcfc"
            android:id="@+id/li">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="#D1344F"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#D1344F">
                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/icon_heart"

                            android:layout_gravity="center"
                            android:background="#D1344F"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Heart Beat"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#a9a9a9"
                            android:layout_margin="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Your Readings"
                            android:padding="9dp"
                            android:layout_gravity="center"
                            android:textColor="#fcfcfc"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:background="#355BA3"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#355BA3">
                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/blood_pressure"

                            android:layout_gravity="center"
                            android:background="#355BA3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Blood Pressure"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#a9a9a9"
                            android:layout_margin="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="9dp"
                            android:text="Your Readings"
                            android:layout_gravity="center"
                            android:textColor="#fcfcfc"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:background="#EDB151"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#EDB151">
                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/oxy"
                            android:layout_gravity="center"
                            android:background="#EDB151"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Blood Oxygen"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#a9a9a9"
                            android:layout_margin="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Your Readings"
                            android:padding="9dp"
                            android:layout_gravity="center"
                            android:textColor="#fcfcfc"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.v7.widget.LinearLayoutCompat>
